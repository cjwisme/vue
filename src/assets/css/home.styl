.home
  /deep/.el-card__body
        height 100%
  .user
    //height 280px
    display flex
    align-items center
    border-bottom 1px solid #ccc
    padding-bottom 20px
    margin-bottom  20px
    img
      width 150px
      height 150px
      border-radius 50%
      margin-right 40px

    &Info
      display flex
      flex-direction column
      justify-content center
      .name
        font-size 36px
        margin-bottom 20px
      .access
        font-size 20px
        color #999999


  .login-info
    p
      height 30px
      line-height 30px
      font-size 16px
      color: #999999
      span
        color #666666
        margin-left:60px


  .num
    display flex
    flex-wrap wrap
    justify-content space-between
    .el-card
      width 32%
      margin-bottom 15px
    /deep/.el-card__body
      display flex
      padding 0
    .icon
      font-size 30px
      width 80px
      height 80px
      text-align center
      line-height 80px
      margin-right:30px

    .detail
      display flex
      flex-direction column
      justify-content center
      p
        margin-bottom:10px
        text-align center
      .num
        margin-top: 10px
        font-size:30px
        color #333333
      .txt
        font-size 16px
        color #999999

  .m-graph
    .el-card
      height 280px
      margin-bottom 20px


  .b-graph
    display flex
    justify-content space-between

    .el-card
      height 280px
      width 48%


